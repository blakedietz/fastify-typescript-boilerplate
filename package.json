{
  "name": "fastify-typescript-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.ts",
  "directories": {
    "test": "src/test"
  },
  "engines": {
    "node": "12.x"
  },
  "dependencies": {
    "@types/node": "^12.7.5",
    "bcrypt": "^3.0.6",
    "dotenv": "^8.1.0",
    "fastify": "^2.0.0",
    "fastify-autoload": "^1.0.0",
    "fastify-cli": "^1.2.0",
    "fastify-cookie": "^3.1.0",
    "fastify-plugin": "^1.5.0",
    "jsonwebtoken": "^8.5.1",
    "pg": "^7.12.1",
    "ts-node": "^8.4.1",
    "ts-node-dev": "^1.0.0-pre.43",
    "typedi": "^0.8.0",
    "typeorm": "^0.2.19",
    "typeorm-typedi-extensions": "^0.2.3",
    "typescript": "^3.6.3",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.3.0",
    "@typescript-eslint/parser": "^2.3.0",
    "eslint": "^6.4.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-prettier": "^3.1.1",
    "prettier": "^1.18.2",
    "tap": "^12.5.3"
  },
  "scripts": {
    "eslint:fix": "eslint -c ./.eslintrc.json --fix ./src/**/*.ts",
    "logs:tail": "heroku logs --tail",
    "migration:generate": "npm run typeorm -- migration:generate --config src/config/ormconfig.json --connection  --name ",
    "migration:run": "npm run typeorm -- migration:run",
    "docker:stop-containers": "docker container stop $(docker container ls -aq)",
    "docker:remove-containers": "docker container stop $(docker container ls -aq)",
    "start": "ts-node src/index.ts",
    "dev": "cp ./config/dev/.env . & docker-compose up & ts-node-dev --respawn --transpileOnly src/index.ts",
    "test": "cp ./config/test/.env . & tap src/**/*.test.ts",
    "ts:build": "tsc",
    "ts:watch": "tsc -w",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blakedietz/kbd-notifs.git"
  },
  "keywords": [],
  "author": "blakedietz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/blakedietz/kbd-notifs/issues"
  },
  "homepage": "https://github.com/blakedietz/kbd-notifs#readme"
}
